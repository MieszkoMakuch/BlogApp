

@model List<BasketballAcademyBlog.Models.Publication>

@{
    ViewBag.Title = "List";
}

<div class="container">
    <div class="head-text">
        <h1>Car Blog</h1>
        <p class="lead-text">Exemplary blog created with BlogApp.</p>
        <a href="https://github.com/MieszkoMakuch/BlogApp" target="_blank" style=" font-size: 50px; "><i class="fa fa-github"></i></a>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-md-8">
            <div class="post-fluid post-medium-vertical">
                @foreach (var publication in Model.OrderByDescending(i => i.DateTime))
                {


                    <div class="container-fluid post-default visible animated fadeInUp">
                        <div class="container-medium">
                            <div class="row post-items">
                                <div class="post-item-banner">
                                    <img src="@publication.Link" alt="">
                                </div>
                                <div class="col-md-12">
                                    <div class="post-item">
                                        <div class="post-item-paragraph">
                                            <div>
                                                <a href="medium-image-v1-1.html#" class="quick-read qr-only-phone"><i class="fa fa-eye"></i></a>
                                                <a href="medium-image-v1-1.html#" class="mute-text">DESIGN</a>
                                            </div>
                                            <h3>
                                                @Html.ActionLink(@publication.Title, "ReadPost", "Publication", new { @id = publication.Id }, null)
                                            </h3>
                                            <p>
                                                @publication.Content.Substring(0, @publication.Content.Length / 3)...
                                                @Html.ActionLink("Read more", "ReadPost", "Publication", new { @id = publication.Id }, null)
                                            </p>
                                        </div>
                                        <div class="post-item-info clearfix">
                                            <div class="pull-left">
                                                <span>@publication.DateTime</span>&nbsp;&nbsp;&nbsp;•&nbsp;&nbsp;&nbsp;By @publication.Author.FullName
                                            </div>
                                            <div class="pull-right post-item-social">
                                                <a href="medium-image-v1-1.html#" class="quick-read qr-not-phone"><i class="fa fa-eye"></i></a>
                                                <a href="medium-image-v1-1.html#" tabindex="0" role="button" data-toggle="popover" data-trigger="focus" data-placement="top" data-content="<a href='#'><i class='fa fa-facebook'></i></a><a href='#'><i class='fa fa-twitter'></i></a>" class="pis-share" data-original-title="" title=""><i class="fa fa-share-alt"></i></a>
                                                <a href="medium-image-v1-1.html#" class="post-like"><i class="fa fa-heart"></i><span>28</span></a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }

            </div>
        </div>
        <aside class="col-md-4">

            <div class="laread-right">

                <div class="laread-list movie-bar">
                    <a>
                        <img src="../../Content/assets/img/entityframework.png" alt="">
                    </a>
                </div>

                <ul class="laread-list">
                    <li class="title"><b>ABOUT THE PROJECT</b></li>
                    <li class="text-bar">
                        <p>
                            BlogApp is a simple web blogging application implemented using ASP.NET MVC and Entity Framework.
                        </p>
                        <p>
                            <b>Technologies used:</b>
                            <li class="bar-tags">
                                <a>ASP.NET MVC </a>
                                <a>Entity Framework </a>
                                <a>Twitter Bootstrap </a>
                            </li>
                    </p>
                    </li>
                </ul>

                <ul class="laread-list social-bar">
                    <li class="title">GITHUB REPOSITORY</li>
                    <a href="https://github.com/MieszkoMakuch/blogapp" target="_blank">BlogApp GitHub repository</a>
                    <br/><br/><p>Check out my other repositories:</p>
                    <li class="social-icons">
                        <a href="https://github.com/MieszkoMakuch/" target="_blank"><i class="fa fa-github"></i></a>
                    </li>
                </ul>

            </div>

        </aside>
    </div>
</div>