@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("Logout", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

    <ul class="nav navbar-nav navbar-right">
        @if (User.IsInRole("Admin"))
        {
        <li>
            <a href="@Url.Action("Create", "Publication")">
                <i class="fa fa-plus" style=" color: #fff padding-right: 10px; "></i>
                Create
            </a>           
        </li>
        }
        <li>
            @Html.ActionLink("Hello " + User.Identity.GetUserName() + "!", "Index", "Home", routeValues: null, htmlAttributes: new { title = "Manage" })
        </li>
        <li>
            <a href="javascript:document.getElementById('logoutForm').submit()">
                Logout
                <i class="fa fa-sign-out" style=" color: #fff padding-right: 10px; "></i>
            </a>
        </li>
    </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>
            <a href="@Url.Action("Register", "Account")"  id = "registerLink">
                <i class="fa fa-user-plus" style=" color: #fff padding-right: 10px; "></i>
                Register
            </a>
        </li>
        <li>
            <a href="@Url.Action("Login", "Account")">
                <i class="fa fa-sign-in" style=" color: #fff padding-right: 10px; "></i>
                Log in
            </a>
        </li>
    </ul>
}
