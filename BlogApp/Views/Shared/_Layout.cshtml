



<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="utf-8">
<meta http-equiv="X-UA-Compatible" content="IE=edge">
<meta name="viewport" content="width=device-width, initial-scale=1">
<meta name="description" content="">
<meta name="author" content="">
<link rel="icon" href="../../Content/assets/img/favicon.ico">
<title>@ViewBag.Title - Car Blog</title>
<!-- Bootstrap core CSS -->
<link href="../../Content/assets/css/bootstrap.min.css" rel="stylesheet">
<!-- Font Awesome CSS -->
<link href="../../Content/assets/css/font-awesome.min.css" rel="stylesheet">
<!-- Jasny CSS -->
<link href="../../Content/assets/css/jasny-bootstrap.min.css" rel="stylesheet">
<!-- Animate CSS -->
<link href="../../Content/assets/css/animate.css" rel="stylesheet">
<!-- Code CSS -->
<link href="../../Content/assets/css/tomorrow-night.css" rel="stylesheet" />
<!-- Gallery CSS -->
<link href="../../Content/assets/css/bootstrap-gallery.css" rel="stylesheet">
<!-- ColorBox CSS -->
<link href="../../Content/assets/css/colorbox.css" rel="stylesheet">
<!-- Custom font -->
<link href='https://fonts.googleapis.com/css?family=Raleway:400,200,100,300,500,600,700,800,900' rel='stylesheet' type='text/css'>

<link href='https://fonts.googleapis.com/css?family=Roboto+Slab&subset=latin,latin-ext' rel='stylesheet' type='text/css'>
<!-- Custom styles for this template -->
<link href="../../Content/assets/css/style.css" rel="stylesheet">
<!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
<!--[if lt IE 9]>
<script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
<script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
<![endif]-->
</head>
<body>
	<div class="page-loader">
		<div class="loader-in">Loading...</div>
		<div class="loader-out">Loading...</div>
	</div>

	<div class="canvas">
		<div class="canvas-overlay"></div>
		<header>
			<nav class="navbar navbar-fixed-top navbar-laread">
				<div class="container">
					<div class="navbar-header">
                            @Html.ActionLink("Car Blog", "Index", "Home", new { area = "" }, new { @style = "float: left; height: 64px !important; font-size: 38px; line-height: 63px; color: #3d3d3f;  background-color: #f3f3f3;  padding: 0px 20px !important; " })

					</div>
					<button type="button" class="navbar-toggle collapsed menu-collapse" data-toggle="collapse" data-target="#main-nav">
						<span class="sr-only">Toggle navigation</span>
						<i class="fa fa-plus"></i>
					</button>
					<div class="collapse navbar-collapse" id="main-nav">

                        @Html.Partial("_LoginPartial")
					</div><!--/.nav-collapse -->
				</div>
			</nav>
		</header>

        @RenderBody()

		<footer class="container-fluid footer">
			<div class="container text-center">
				<div class="footer-logo">
                    @Html.ActionLink("Car Blog", "Index", "Home", new { area = "" }, new { @style = "font-size: 38px; line-height: 63px; color: #3d3d3f;  background-color: #f3f3f3; padding: 10px 20px !important;" })

                </div>
				<p class="laread-motto">Exemplary blog created with BlogApp.</p>
				<div class="laread-social">
                    <a href="https://github.com/MieszkoMakuch/BlogApp" target="_blank" style=" font-size: 50px; margin-top: -40px "><i class="fa fa-github"></i></a>
				</div>
			</div>
		</footer>
	</div>


	<!-- Login Modal -->
	<div class="modal leread-modal fade" id="login-form" tabindex="-1" role="dialog" aria-hidden="true">
		<div class="modal-dialog">
			<div class="modal-content" id="login-content">
				<div class="modal-header">
					<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
					<h4 class="modal-title"><i class="fa fa-unlock-alt"></i>LaRead Sign In</h4>
				</div>
				<div class="modal-body">
					<form>
						<div class="form-group">
							<input type="text" class="form-control" placeholder="Email">
						</div>
						<div class="form-group">
							<input type="password" class="form-control" placeholder="Password">
						</div>
						<div class="linkbox">
							<a >Forgot password ?</a>
							<span>No account ? <a  id="register-btn" data-toggle="modal" data-target="#register-form">Sign Up.</a></span>
							<span class="form-warning"><i class="fa fa-exclamation"></i>Fill the require.</span>
						</div>
						<div class="linkbox">
							<label><input type="checkbox"><span>Remember me</span><i class="fa"></i></label>
							<button type="button" class="btn btn-golden btn-signin">SIGN IN</button>
						</div>
					</form>
				</div>
				<div class="modal-footer">
					<div class="provider">
						<span>Sign In With</span>
						<a ><i class="fa fa-facebook"></i></a>
						<a ><i class="fa fa-twitter"></i></a>
					</div>
				</div>
			</div>
			<div class="modal-content" id="register-content">
				<div class="modal-header">
					<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
					<h4 class="modal-title"><i class="fa fa-lock"></i>LaRead Sign Up</h4>
				</div>
				<div class="modal-body">
					<form>
						<div class="form-group">
							<input class="form-control" placeholder="Name">
						</div>
						<div class="form-group">
							<input class="form-control" placeholder="Username">
						</div>
						<div class="form-group">
							<input class="form-control" placeholder="Email">
						</div>
						<div class="form-group">
							<input class="form-control" type="password" placeholder="Password">
						</div>
						<div class="linkbox">
							<span>Already got account? <a  id="login-btn" data-target="#login-form">Sign In.</a></span>
						</div>
						<div class="linkbox">
							<label><input type="checkbox"><span>Remember me</span><i class="fa"></i></label>
							<button type="button" class="btn btn-golden btn-signin">SIGN UP</button>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>

	<!-- Bootstrap core JavaScript
	================================================== -->
	<!-- Placed at the end of the document so the pages load faster -->
	<script src="../../Content/assets/js/jquery.min.js"></script>
	<script src="../../Content/assets/js/bootstrap.min.js"></script>
	<script src="../../Content/assets/js/jasny-bootstrap.min.js"></script>
	<script src="../../Content/assets/js/prettify.js"></script>
	<script src="../../Content/assets/js/lang-css.js"></script>
	<script src="../../Content/assets/js/jquery.blueimp-gallery.min.js"></script>
	<script src="../../Content/assets/js/imagesloaded.js"></script>
	<script src="../../Content/assets/js/masonry.js"></script>
	<script src="../../Content/assets/js/viewportchecker.js"></script>
	<script src="../../Content/assets/js/jquery.dotdotdot.min.js"></script>
	<script src="../../Content/assets/js/jquery.colorbox-min.js"></script>
	<script src="../../Content/assets/js/jquery.nicescroll.min.js"></script>
	<script src="../../Content/assets/js/isotope.pkgd.min.js"></script>
	<script src="../../Content/assets/js/jquery.ellipsis.min.js"></script>
	<script src="../../Content/assets/js/calendar.js"></script>
	<script src="../../Content/assets/js/jquery.touchSwipe.min.js"></script>
	<script src="../../Content/assets/js/script.js"></script>
	<script>!function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0],p=/^http:/.test(d.location)?'http':'https';if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src=p+'://platform.twitter.com/widgets.js';fjs.parentNode.insertBefore(js,fjs);}}(document, 'script', 'twitter-wjs');</script>
 
    
    @RenderSection("scripts", required: false)
</body>
</html>
